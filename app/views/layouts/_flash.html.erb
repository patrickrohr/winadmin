<% flash.each do |name, msg| -%>
  <div class="<%= bootstrap_flash_class_for name %> alert-dismissible">
  <button type="button" class="close" data-dismiss="alert">
    <span aria-hidden="true">&times;</span>
    <span class="sr-only"><%= t :close %></span>
  </button>
  <%= msg %>
  </div>
<% end %>