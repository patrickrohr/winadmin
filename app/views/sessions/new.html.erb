<%= form_for @user_session, url: session_path, builder: BootstrapFormBuilder do |f| %>
  <%= f.bs_text_field(:email) %>
  <%= f.bs_password_field(:password) %>
  <%= f.bs_submit(t(:login)) %>
  <%= link_to(t(:forgot_password), forgot_password_sessions_path, { :class => "btn btn-default" }) %>
<% end %>